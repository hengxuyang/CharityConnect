<%- include('../partials/header') %>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Email Verification</h3>
                </div>
                <div class="card-body text-center">
                    <% if (typeof success !== 'undefined') { %>
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success fa-5x mb-3"></i>
                            <h4 class="text-success">Email Verified Successfully!</h4>
                            <p>Your email has been verified. You can now log in to your account.</p>
                        </div>
                        <a href="/auth/login" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-1"></i> Login to Your Account
                        </a>
                    <% } else if (typeof error !== 'undefined') { %>
                        <div class="mb-4">
                            <i class="fas fa-times-circle text-danger fa-5x mb-3"></i>
                            <h4 class="text-danger">Verification Failed</h4>
                            <p><%= error %></p>
                        </div>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="/auth/login" class="btn btn-outline-secondary">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                            <a href="/auth/register" class="btn btn-primary">
                                <i class="fas fa-user-plus me-1"></i> Register
                            </a>
                        </div>
                    <% } else { %>
                        <div class="mb-4">
                            <i class="fas fa-envelope text-primary fa-5x mb-3"></i>
                            <h4>Verifying Your Email</h4>
                            <p>Please wait while we verify your email address...</p>
                            <div class="spinner-border text-primary mt-2" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
