    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Total Donations</h6>
                        <h2 class="mb-0"><%= stats.totalDonations %></h2>
                    </div>
                    <div class="bg-info p-3 rounded">
                        <i class="fas fa-gift text-white fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/charity/donations" class="text-decoration-none">View all donations <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Pending Donations</h6>
                        <h2 class="mb-0"><%= stats.pendingDonations %></h2>
                    </div>
                    <div class="bg-warning p-3 rounded">
                        <i class="fas fa-truck text-white fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/charity/donations?status=Pending" class="text-decoration-none">View pending donations <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Delivered Donations</h6>
                        <h2 class="mb-0"><%= stats.deliveredDonations %></h2>
                    </div>
                    <div class="bg-success p-3 rounded">
                        <i class="fas fa-box-open text-white fa-2x"></i>
                    </div>
                </div>
