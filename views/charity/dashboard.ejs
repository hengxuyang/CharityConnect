<%- include('../partials/header') %>

<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="mb-3">Charity Dashboard</h1>
        <p class="text-muted">Welcome back, <%= user.name %>. Here's an overview of your charity activities.</p>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Total Requests</h6>
                        <h2 class="mb-0"><%= stats.totalRequests %></h2>
                    </div>
                    <div class="bg-primary p-3 rounded">
                        <i class="fas fa-list-alt text-white fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/charity/requests" class="text-decoration-none">View all requests <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Pending Requests</h6>
                        <h2 class="mb-0"><%= stats.pendingRequests %></h2>
                    </div>
                    <div class="bg-warning p-3 rounded">
                        <i class="fas fa-hourglass-half text-white fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/charity/requests?status=Pending" class="text-decoration-none">View pending requests <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Fulfilled Requests</h6>
                        <h2 class="mb-0"><%= stats.fulfilledRequests %></h2>
                    </div>
                    <div class="bg-success p-3 rounded">
                        <i class="fas fa-check-circle text-white fa-2x"></i>
                    </div>
                </div>
                <div class="mt-3">
                    <a href="/charity/requests?status=Fulfilled" class="text-decoration-none">View fulfilled requests <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

