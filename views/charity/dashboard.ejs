<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a href="/charity/requests/create" class="btn btn-primary w-100">
                            <i class="fas fa-plus me-2"></i> Create Donation Request
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/charity/inventory" class="btn btn-success w-100">
                            <i class="fas fa-boxes me-2"></i> Manage Inventory
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="/charity/profile" class="btn btn-info text-white w-100">
                            <i class="fas fa-user-edit me-2"></i> Update Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Low Stock Items -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Low Stock Items</h5>
                <a href="/charity/inventory" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <% if (lowStockItems && lowStockItems.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Category</th>
                                    <th>Current Stock</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% lowStockItems.forEach(function(item) { %>
                                    <tr>
                                        <td><%= item.item.name %></td>
                                        <td><%= item.item.category ? item.item.category.name : 'N/A' %></td>
                                        <td><%= item.quantity %> <%= item.item.unit %>(s)</td>
                                        <td>
                                            <% if (item.quantity <= 5) { %>
                                                <span class="badge bg-danger">Urgent Need</span>
                                            <% } else { %>
                                                <span class="badge bg-warning">Running Low</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/charity/requests/create?item=<%= item.item.id %>" class="btn btn-sm btn-primary">
                                                <i class="fas fa-plus"></i> Create Request
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted mb-0">No low stock items at the moment.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Recent Requests -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Donation Requests</h5>
                <a href="/charity/requests" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <% if (recentRequests && recentRequests.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Request Type</th>
                                    <th>Status</th>
                                    <th>Date Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentRequests.forEach(function(request) { %>
                                    <tr>
                                        <td><%= request.item.name %></td>
                                        <td><%= request.quantity %> <%= request.item.unit %>(s)</td>
                                        <td><%= request.request_type %></td>
                                        <td>
                                            <span class="badge <%= request.status === 'Pending' ? 'bg-warning' : (request.status === 'Fulfilled' ? 'bg-success' : 'bg-secondary') %>">
                                                <%= request.status %>
                                            </span>
                                        </td>
                                        <td><%= new Date(request.created_at).toLocaleDateString() %></td>
                                        <td>
                                            <a href="/charity/requests/<%= request.id %>" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted mb-0">No recent donation requests.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Recent Donations -->
<div class="row">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Donations</h5>
                <a href="/charity/donations" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body">
                <% if (recentDonations && recentDonations.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Donor</th>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentDonations.forEach(function(donation) { %>
                                    <tr>
                                        <td><%= donation.donor.name %></td>
                                        <td><%= donation.request.item.name %></td>
                                        <td><%= donation.quantity %> <%= donation.request.item.unit %>(s)</td>
                                        <td>
                                            <span class="badge <%= donation.status === 'Pending' ? 'bg-warning' : (donation.status === 'Delivered' ? 'bg-success' : 'bg-secondary') %>">
                                                <%= donation.status %>
                                            </span>
                                        </td>
                                        <td><%= new Date(donation.created_at).toLocaleDateString() %></td>
                                        <td>
                                            <% if (donation.status === 'Pending') { %>
                                                <button class="btn btn-sm btn-success update-donation" data-id="<%= donation.id %>" data-status="Delivered">
                                                    <i class="fas fa-check"></i> Mark Delivered
                                                </button>
                                            <% } else if (donation.status === 'Delivered') { %>
                                                <button class="btn btn-sm btn-info send-thank-you" data-id="<%= donation.id %>" data-donor="<%= donation.donor.name %>">
                                                    <i class="fas fa-envelope"></i> Thank You
                                                </button>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="text-muted mb-0">No recent donations.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Thank You Modal -->
<div class="modal fade" id="thankYouModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Send Thank You Note</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="thankYouForm">
                    <input type="hidden" id="donationId">
                    <div class="mb-3">
                        <label for="thankYouMessage" class="form-label">Message</label>
                        <textarea class="form-control" id="thankYouMessage" rows="4" placeholder="Write a thank you message to the donor"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="sendThankYou">Send Message</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Update donation status
        document.querySelectorAll('.update-donation').forEach(button => {
            button.addEventListener('click', function() {
                const donationId = this.getAttribute('data-id');
                const status = this.getAttribute('data-status');
                
                if (confirm(`Are you sure you want to mark this donation as ${status}?`)) {
                    fetch(`/charity/donations/${donationId}/status`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ status })
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert('Donation status updated successfully');
                            location.reload();
                        } else {
                            alert(data.message || 'An error occurred');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('An error occurred while updating donation status');
                    });
                }
            });
        });
        
        // Send thank you note
        const thankYouModal = new bootstrap.Modal(document.getElementById('thankYouModal'));
        
        document.querySelectorAll('.send-thank-you').forEach(button => {
            button.addEventListener('click', function() {
                const donationId = this.getAttribute('data-id');
                const donorName = this.getAttribute('data-donor');
                
                document.getElementById('donationId').value = donationId;
                document.getElementById('thankYouMessage').value = `Dear ${donorName},\n\nThank you for your generous donation. Your support means a lot to us and helps us continue our mission.\n\nSincerely,\n${charity.name}`;
                
                thankYouModal.show();
            });
        });
        
        document.getElementById('sendThankYou').addEventListener('click', function() {
            const donationId = document.getElementById('donationId').value;
            const message = document.getElementById('thankYouMessage').value;
            
            if (!message.trim()) {
                alert('Please enter a thank you message');
                return;
            }
            
            fetch(`/charity/donations/${donationId}/thank-you`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ message })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Thank you note sent successfully');
                    thankYouModal.hide();
                } else {
                    alert(data.message || 'An error occurred');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while sending thank you note');
            });
        });
    });
</script>

